<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/user_profile_padding"
    android:paddingEnd="@dimen/user_profile_padding"
    android:background="@color/custom_movie_card">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/user_profile_top_name_margin"
                tools:text="Константин"
                android:fontFamily="@font/popular_now_font"
                android:textColor="@color/custom_text"
                android:textSize="@dimen/user_top_name_text_size"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/tvUserMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/user_profile_top_mail_margin"
                tools:text="konst.89@mail.com"
                android:fontFamily="@font/user_profile_data_font"
                android:textColor="@color/custom_text"
                android:textSize="@dimen/user_top_mail_text_size"
                app:layout_constraintTop_toBottomOf="@id/tvUserName"
                app:layout_constraintStart_toStartOf="parent"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/user_profile_icon_size"
                android:layout_height="@dimen/user_profile_icon_size"
                android:layout_marginTop="@dimen/user_profile_icon_margin_top"
                android:background="@drawable/avatar_icon_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvInterests"
                android:text="@string/interest"
                style="CustomUserProfileText"
                app:layout_constraintTop_toBottomOf="@id/tvUserMail"
                app:layout_constraintStart_toStartOf="parent"
                />

            <!-- genre recycle view-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUserGenreList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:minHeight="@dimen/user_profile_rv_min_height"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginTop="@dimen/user_profile_rv_margin_top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvInterests"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tvPersonalData"
                android:layout_marginTop="40dp"
                android:text="@string/personal_data"
                style="CustomUserProfileText"
                app:layout_constraintTop_toBottomOf="@id/rvUserGenreList"
                app:layout_constraintStart_toStartOf="parent"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPersonalData"
                style="@style/CustomTextInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="320dp"
                app:helperTextEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/tvPersonalData"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/etUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:paddingBottom="6dp"
                    android:background="@drawable/border_bottom"
                    android:hint="@string/hint_name"
                    tools:ignore="RtlSymmetry"/>
                <TextView
                    android:id="@+id/etUserPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingStart="0dp"
                    android:inputType="textPassword"
                    tools:text="lolKek00"
                    android:paddingBottom="6dp"
                    android:background="@drawable/border_bottom"
                    android:hint="@string/hint_password"
                    tools:ignore="RtlSymmetry"/>
                <TextView
                    android:id="@+id/etUserMail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingStart="0dp"
                    android:paddingBottom="6dp"
                    android:background="@drawable/border_bottom"
                    android:hint="@string/hint_mail"
                    tools:ignore="RtlSymmetry"/>
                <TextView
                    android:id="@+id/etUserNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingStart="0dp"
                    android:paddingBottom="6dp"
                    android:background="@drawable/border_bottom"
                    android:hint="@string/hint_number"
                    tools:ignore="RtlSymmetry"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvSettings"
                android:layout_marginTop="40dp"
                android:text="@string/settings"
                style="CustomUserProfileText"
                app:layout_constraintTop_toBottomOf="@id/tilPersonalData"
                app:layout_constraintStart_toStartOf="parent"
                />

            <Spinner
                android:id="@+id/spNotificationAndSounds"
                style="@style/SpinnerTheme"
                app:layout_constraintTop_toBottomOf="@id/tvSettings"
                app:layout_constraintStart_toStartOf="parent"
                />
            <Spinner
                android:id="@+id/spConfidentiality"
                style="@style/SpinnerTheme"
                app:layout_constraintTop_toBottomOf="@id/spNotificationAndSounds"
                app:layout_constraintStart_toStartOf="parent"
                />
            <Spinner
                android:id="@+id/spTheme"
                style="@style/SpinnerTheme"
                app:layout_constraintTop_toBottomOf="@id/spConfidentiality"
                app:layout_constraintStart_toStartOf="parent"
                />
            <Spinner
                android:id="@+id/spDataAndMemory"
                style="@style/SpinnerTheme"
                app:layout_constraintTop_toBottomOf="@id/spTheme"
                app:layout_constraintStart_toStartOf="parent"
                />
            <Spinner
                android:id="@+id/spLanguage"
                style="@style/SpinnerTheme"

                app:layout_constraintTop_toBottomOf="@id/spTheme"
                app:layout_constraintStart_toStartOf="parent"
                />


            <TextView
                android:id="@+id/tvAppFeedback"
                style="CustomUserProfileText"
                android:text="@string/app"
                app:layout_constraintTop_toBottomOf="@id/spLanguage"
                app:layout_constraintStart_toStartOf="parent"
                />

            <Spinner
                android:id="@+id/spQuestion"
                style="@style/SpinnerTheme"
                app:layout_constraintTop_toBottomOf="@id/tvAppFeedback"
                app:layout_constraintStart_toStartOf="parent"
                />
            <Spinner
                android:id="@+id/spProblems"
                style="@style/SpinnerTheme"

                app:layout_constraintTop_toBottomOf="@id/spQuestion"
                app:layout_constraintStart_toStartOf="parent"
                />

            <Button
                android:id="@+id/btnLogout"
                style="CustomUserProfileText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="96dp"
                android:text="@string/logout"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:background="@drawable/logout_button_selector"
                app:layout_constraintTop_toBottomOf="@id/spProblems"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>