<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_movie_card">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <!--app:layout_constraintGuide_begin="@dimen/list_of_guideline_left"-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glUserProfileLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="20dp"
                android:orientation="vertical"/>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glUserProfileRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_end="20dp"
                android:orientation="vertical"/>

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:text="Константин"
                android:fontFamily="@font/popular_now_font"
                android:textColor="@color/custom_text"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/glUserProfileLeft"
                />
            <TextView
                android:id="@+id/tvUserMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="konst.89@mail.com"
                android:fontFamily="@font/user_profile_data_font"
                android:textColor="@color/custom_text"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tvUserName"
                app:layout_constraintStart_toStartOf="@id/glUserProfileLeft"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/avatar_icon_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/glUserProfileRight"/>

            <TextView
                android:id="@+id/tvInterests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="57dp"
                android:text="Интересы"
                android:fontFamily="@font/user_profile_data_font"
                android:textColor="@color/custom_text"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvUserMail"
                app:layout_constraintStart_toStartOf="@id/glUserProfileLeft"
                />

            <!-- genre recycle view-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUserGenreList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:minHeight="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginTop="14dp"
                app:layout_constraintStart_toEndOf="@id/glUserProfileLeft"
                app:layout_constraintTop_toBottomOf="@id/tvInterests"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tvPersonalData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Личные данные"
                android:fontFamily="@font/user_profile_data_font"
                android:textColor="@color/custom_text"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/rvUserGenreList"
                app:layout_constraintStart_toStartOf="@id/glUserProfileLeft"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPersonalData"
                style="@style/CustomTextInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="320dp"

                app:helperTextEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/tvPersonalData"
                app:layout_constraintStart_toStartOf="@id/glUserProfileLeft">

                <TextView
                    android:id="@+id/etUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:paddingBottom="6dp"
                    android:background="@drawable/border_bottom"
                    android:hint="Имя"
                    tools:ignore="RtlSymmetry"/>
                <TextView
                    android:id="@+id/etUserPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingStart="0dp"
                    android:inputType="textPassword"
                    android:text="lolKek00"
                    android:paddingBottom="6dp"
                    android:background="@drawable/border_bottom"
                    android:hint="Почта"
                    tools:ignore="RtlSymmetry"/>
                <TextView
                    android:id="@+id/etUserMail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingStart="0dp"
                    android:paddingBottom="6dp"
                    android:background="@drawable/border_bottom"
                    android:hint="Почта"
                    tools:ignore="RtlSymmetry"/>
                <TextView
                    android:id="@+id/etUserNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingStart="0dp"
                    android:paddingBottom="6dp"
                    android:background="@drawable/border_bottom"
                    android:hint="Телефон"
                    tools:ignore="RtlSymmetry"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Настройки"
                android:fontFamily="@font/user_profile_data_font"
                android:textColor="@color/custom_text"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tilPersonalData"
                app:layout_constraintStart_toStartOf="@id/glUserProfileLeft"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tilPersonalData"
                app:layout_constraintStart_toStartOf="@id/glUserProfileLeft"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="320dp"
                android:minHeight="100dp"
                style="@style/SpinnerTheme"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvSettings"
                app:layout_constraintStart_toStartOf="@id/glUserProfileLeft"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>